<odoo>
    <record id="grade_view_tree" model="ir.ui.view">
        <field name="name">Grade Tree</field>
        <field name="model">grade</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" class="header_custom">
                <field name="name"/>
                <field name="housing"/>
                <field name="transport"/>
                <field name="mediacl"/>
                <field name="total"/>
                <field name="bouns"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="grade_view_search" model="ir.ui.view">
        <field name="name">Grade Search</field>
        <field name="model">grade</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="bouns"/>
            </search>
        </field>
    </record>

    <record id="grade_view_form" model="ir.ui.view">
        <field name="name">Grade Form</field>
        <field name="model">grade</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button name="action_draft" type="object" class="btn-primary" string="Set To Draft"
                                invisible="state == 'draft' or state =='approved'"/>
                        <button name="action_pending" type="object" class="btn-secondary" string="Set To Pending"
                                invisible="state != 'draft' "/>
                        <button name="action_approved" type="object" class="btn-success" string="Set To Approved"
                                invisible="state !='pending' "/>
                        <field name="state" widget="statusbar"/>
                    </header>

                    <group>
                        <group>
                            <field name="name" readonly="state == 'approved'"/>
                            <field name="state" readonly="state == 'approved'"/>
                            <field name="total" readonly="state == 'approved'"/>
                        </group>
                        <group>
                            <field name="transport" readonly="state == 'approved'"/>
                            <field name="mediacl" readonly="state == 'approved'"/>
                            <field name="housing" readonly="state == 'approved'"/>
                            <field name="bouns" readonly="state == 'approved'"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="grade_action" model="ir.actions.act_window">
        <field name="name">Grade Action</field>
        <field name="res_model">grade</field>
    </record>

    <record id="grade_change_state_sever_action" model="ir.actions.server">
        <field name="name">Change State</field>
        <field name="model_id" ref="model_grade"/>
        <field name="binding_model_id" ref="model_grade"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_open_change_state_wizard()
        </field>
    </record>

    <menuitem
        id="grade_menu_item"
        name="Grades"
        parent="grades_menu"
        action="grade_action"
    />
</odoo>
