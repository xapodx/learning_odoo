<odoo>

    <!-- Form View -->
    <record id="change_state_view_form" model="ir.ui.view">
        <field name="name">change state wizard Form</field>
        <field name="model">state</field>
        <field name="arch" type="xml">
            <form>
              <group>
                  <field name="grade_id" invisible="1"/>
                  <field name="state"  required="1"/>
                  <field name="reason" required="1"/>
              </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Window Action -->
    <record id="action_confirm" model="ir.actions.act_window">
        <field name="name">change state</field>
        <field name="res_model">state</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>
</odoo>